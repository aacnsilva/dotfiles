{
    "github.copilot.editor.enableAutoCompletions": true,
    "git.autofetch": false,
    "workbench.startupEditor": "newUntitledFile",
    "diffEditor.ignoreTrimWhitespace": false,
    "[json]": {
        "editor.defaultFormatter": "ms-dynamics-smb.al"
    },
    "editor.codeLens": false,
    "[al]": {
        "editor.defaultFormatter": "ms-dynamics-smb.al"
    },
    "security.workspace.trust.untrustedFiles": "open",
    "editor.minimap.enabled": false,
    "workbench.layoutControl.enabled": false,
    "window.commandCenter": false,
    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.insertModeKeyBindings": [
        {
            "before": [
                "j",
                "j"
            ],
            "after": [
                "<Esc>"
            ]
        }
    ],
    "editor.lineNumbers": "relative",
    "vim.leader": "<Space>",
    "vim.hlsearch": true,
    "vim.normalModeKeyBindingsNonRecursive": [
        // NAVIGATION
        // switch b/w buffers
        {
            "before": [
                "<S-h>"
            ],
            "commands": [
                ":bprevious"
            ]
        },
        {
            "before": [
                "<S-l>"
            ],
            "commands": [
                ":bnext"
            ]
        },
        // splits
        {
            "before": [
                "leader",
                "v"
            ],
            "commands": [
                ":vsplit"
            ]
        },
        {
            "before": [
                "leader",
                "s"
            ],
            "commands": [
                ":split"
            ]
        },
        // panes
        {
            "before": [
                "leader",
                "h"
            ],
            "commands": [
                "workbench.action.focusLeftGroup"
            ]
        },
        {
            "before": [
                "leader",
                "j"
            ],
            "commands": [
                "workbench.action.focusBelowGroup"
            ]
        },
        {
            "before": [
                "leader",
                "k"
            ],
            "commands": [
                "workbench.action.focusAboveGroup"
            ]
        },
        {
            "before": [
                "leader",
                "l"
            ],
            "commands": [
                "workbench.action.focusRightGroup"
            ]
        },
        {
            "before": [
                "leader",
                "w"
            ],
            "commands": [
                ":wa!"
            ]
        },
        {
            "before": [
                "leader",
                "q"
            ],
            "commands": [
                ":q!"
            ]
        },
        {
            "before": [
                "leader",
                "x"
            ],
            "commands": [
                ":x!"
            ]
        },
        {
            "before": [
                ">",
                "d"
            ],
            "commands": [
                "editor.action.marker.prev"
            ]
        },
        {
            "before": [
                "<",
                "d"
            ],
            "commands": [
                "editor.action.marker.next"
            ]
        },
        {
            "before": [
                "<leader>",
                "c",
                "a"
            ],
            "commands": [
                "editor.action.quickFix"
            ]
        },
        {
            "before": [
                "leader",
                "f"
            ],
            "commands": [
                "workbench.action.quickOpen"
            ]
        },
        {
            "before": [
                "leader",
                "p"
            ],
            "commands": [
                "editor.action.formatDocument"
            ]
        },
        {
            "before": [
                "K"
            ],
            "commands": [
                "editor.action.showDefinitionPreviewHover"
            ]
        },
        {
            "before": [
                "<Esc>"
            ],
            "commands": [
                ":nohl"
            ]
        },
        {
            "before": [
                "<leader>",
                "/"
            ],
            "commands": [
                "workbench.action.findInFiles"
            ]
        },
        {
            "before": [
                "leader",
                "n"
            ],
            "commands": [
                "workbench.action.files.newUntitledFile"
            ]
        },
        // copilot
        {
            "before": [
                "leader",
                "a",
                "i"
            ],
            "commands": [
                "workbench.action.quickchat.launchInlineChat",
            ]
        },
        {
            "before": [
                "leader",
                "a",
                "a"
            ],
            "commands": [
                "workbench.panel.chat.view.copilot.focus",
            ]
        },
        // continue.dev
        // {
        //     "before": [
        //         "leader",
        //         "a",
        //         "i"
        //     ],
        //     "commands": [
        //         "continue.focusEdit",
        //     ]
        // },
        // {
        //     "before": [
        //         "leader",
        //         "a",
        //         "a"
        //     ],
        //     "commands": [
        //         "continue.continueGUIView.focus",
        //     ]
        // },
        // {
        //     "before": [
        //         "d"
        //     ],
        //     "after": [
        //         "\"",
        //         "_",
        //         "d"
        //     ]
        // },
        {
            "before": [
                "x"
            ],
            "after": [
                "\"",
                "_",
                "x"
            ]
        },
        // {
        //     "before": [
        //         "d",
        //         "d"
        //     ],
        //     "after": [
        //         "\"",
        //         "_",
        //         "d",
        //         "d"
        //     ]
        // },
    ],
    "vim.visualModeKeyBindings": [
        // Stay in visual mode while indenting
        {
            "before": [
                "<"
            ],
            "commands": [
                "editor.action.outdentLines"
            ]
        },
        {
            "before": [
                ">"
            ],
            "commands": [
                "editor.action.indentLines"
            ]
        },
        // Move selected lines while staying in visual mode
        // {
        //     "before": [
        //         "J"
        //     ],
        //     "commands": [
        //         "editor.action.moveLinesDownAction"
        //     ]
        // },
        // {
        //     "before": [
        //         "K"
        //     ],
        //     "commands": [
        //         "editor.action.moveLinesUpAction"
        //     ]
        // },
        // toggle comment selection
        // {
        //     "before": [
        //         "leader",
        //         "c"
        //     ],
        //     "commands": [
        //         "editor.action.commentLine"
        //     ]
        // },
        // copilot
        {
            "before": [
                "leader",
                "a",
                "i"
            ],
            "commands": [
                "workbench.action.quickchat.launchInlineChat",
            ]
        },
        // continue.dev
        // {
        //     "before": [
        //         "leader",
        //         "a",
        //         "i"
        //     ],
        //     "commands": [
        //         "continue.focusContinueInput",
        //     ]
        // }
    ],
    "vim.normalModeKeyBindings": [
        // go to
        {
            "before": [
                "g",
                "i"
            ],
            "commands": [
                "editor.action.goToImplementation"
            ]
        },
        {
            "before": [
                "g",
                "p",
                "i"
            ],
            "commands": [
                "editor.action.peekImplementation"
            ]
        },
        {
            "before": [
                "g",
                "p",
                "d"
            ],
            "commands": [
                "editor.action.peekDefinition"
            ]
        },
        {
            "before": [
                "g",
                "r"
            ],
            "commands": [
                "editor.action.referenceSearch.trigger"
            ]
        },
        {
            "before": [
                "g",
                "t",
                "b"
            ],
            "commands": [
                "gitlens.toggleFileBlame"
            ]
        },
        {
            "before": [
                "g",
                "b",
            ],
            "commands": [
                "workbench.action.navigateBack"
            ]
        },
        {
            "before": [
                "g",
                "f",
            ],
            "commands": [
                "workbench.action.navigateForward"
            ]
        },
    ],
    "editor.fontFamily": "JetBrainsMono NF",
    // "editor.fontSize": 16,
    "editor.fontLigatures": true,
    "terminal.explorerKind": "external",
    "workbench.editor.editorActionsLocation": "hidden",
    "debug.console.fontSize": 16,
    "terminal.integrated.fontSize": 16,
    "eslint.format.enable": true,
    "typescript.format.enable": false,
    "javascript.format.enable": false,
    "window.menuBarVisibility": "compact",
    "git.suggestSmartCommit": false,
    "extensions.ignoreRecommendations": true,
    "editor.formatOnSave": true,
    // "workbench.colorTheme": "Correia Gruvbox Theme",
    "al.enableCodeAnalysis": true,
    "al.outputAnalyzerStatistics": false,
    "al.editorServicesLogLevel": "Normal", // This is for checking the LSP stuff in EditorServices.log in the AL extension under bin/win32
    // "editor.formatOnSaveMode": "modifications",
    "al.enableCodeActions": false,
